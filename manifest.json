{
	"name": "uyghurche",
	"version": "1.1",
	"author": "Atypicalim",
	"manifest_version": 3,
	"description": "an chromium extension for uyghur(uighur) language...",
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"permissions": [
		"tabs",
		"notifications",
		"activeTab",
		"background",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*",
		"http://localhost:8080/"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "images/icon.png",
		"default_title": "uyghurche"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'",
		"sandbox": "..."
	},
	"content_scripts": [
		{
			"matches": [
				"http://test.xyz/*"
			],
			"js": [
				"popup.js"
			]
		}
	]
}
